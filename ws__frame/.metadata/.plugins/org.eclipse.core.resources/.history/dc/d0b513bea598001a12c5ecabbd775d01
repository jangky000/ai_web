<script type="text/javascript">
  function wl(str) {
    document.writeln(str + '<br>');        // BODY 태그로 출력됨.
  }
  
  //tool js 등에 개발자들이 많이 사용하는 소스를 모아둔다.
  // 정규 표현식, 천 단위 컴마 출력
  function comma(su) {
    return su.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
  }
  
  /*
  g - Global Flag
  문자열 내의 모든 패턴을 찾는다.
  정규 표현식은 매치되는 문자열을 찾으면 검색을 중단하지만, 이 Flag를 사용하면 매치되는 모든 문자열을 찾는다.
  
  출처: https://blog.sonim1.com/206 [Kendrick's Blog]
  */
  
  
</script>
</head> 
<body>
  <script type="text/javascript">
    var str = 'user1/123/서울시 종로구';
    wl('str type: ' + typeof str);      // 내부 타입 확인
    var strs = str.split('/');              // 문자열 배열
    wl('strs type: ' + typeof strs);    // object
    
    //user1
    wl(strs[0]); // 배열 index 접근, 0~
    wl(typeof strs[0]); // string
    //123
    wl(strs[1]);
    wl(typeof strs[1]); // string
    //서울시 종로구
    wl(strs[2]);
    wl(typeof strs[1]); // string
    
    var title = '     투표하세요.     '; // 마지막 null 값은 제외, 자바스크립트에서는 공백,한글을 1글자로 취급
    wl(title.length); // 16
    title = title.trim();
    wl(title.length); // 6: 투, 표, 하, 세, 요, .
    
    var pay = comma(2100000);
    wl(pay);
    
    var tot = '10 + 5';
    wl('tot: ' + tot); // tot: 10 + 5
    
    //eval(): string -> js code로 변환
    // 문자열 생성 실행까지 모두 다 할 수 있다.
    tot = eval('10 + 5');
    wl('tot: ' + tot); // tot: 15
    
    // 가변 인자 사용 가능, 값을 전달받지 못한 변수는 undefined 할당
    function sungjuk(kor, eng, mat) {
      wl('-------------------');
      wl('kor: ' + kor);
      wl('eng: ' + eng);
      wl('mat: ' + mat);
    }
    
    sungjuk(100, 100, 100);
    /*
      kor: 100
      eng: 100
      mat: 100
    */
    
    sungjuk(100, 100);
    /*
      kor: 100
      eng: 100
      mat: undefined
    */
    
    sungjuk(100);
    
  </script>
  
</body>
</html> 