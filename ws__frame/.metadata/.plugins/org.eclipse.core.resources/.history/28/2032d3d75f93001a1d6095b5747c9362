<script type="text/javascript">
  function wl(str){
    document.writeln(str + '<br>'); // body 태그로 출력
    
  }
  
  function add(su1, su2){
    return su1 + su2;
  }
</script>
</head> 
<body>
 
 <script type="text/javascript">
  wl('함수 출력 테스트');
  var tot = add(100, 200);
  wl('tot: ' + tot);
  
  tot = add(100.3, 200.3);
  wl('tot: ' + tot);
  
  tot = add('월요일', '화요일');
  wl('tot: ' + tot);
  
  var no = 123.456;
  wl('1) ' + Math.ceil(no)); // 124
  wl('2) ' + Math.floor(no)); //123
  wl('3) ' + Math.round(no)); //123
  
  no = no.toFixed(0);// 소수 첫번째 자리에서 반올림
  wl('4) ' + no); //123
  
  no = 123.456;
  no = no.toFixed(1); // 소수 두번째 자리에서 반올림
  wl('5) ' + no); //123.5
  
  no = 123.456;
  no = no.toFixed(2); // 소수 세번째 자리에서 반올림
  wl('6) ' + no); //123.46
  
  // 1원 단위 제거
  
  // no = 9999.456;
  // no = no.toFixed(-1);
  /* Uncaught RangeError: toFixed() digits argument must be between 0 and 100
  at Number.toFixed (<anonymous>) */
  // wl('7) ' + no); // 출력되지 않음
  
  no = 9999.456;
  no = no/10;
  wl('7) ' + no); // 999.9456
  
  no = Math.floor(no);
  wl('7) ' + no); // 999
  
  no = no*10;
  wl('7) ' + no); // 9990
  
  // 10원 단위 제거
  no = 9999.456;
  no = no/100;
  wl('8) ' + no); // 99.99456
  
  no = Math.floor(no);
  wl('8) ' + no); // 99
  
  no = no*100;
  wl('8) ' + no); // 9900
  
  window.alert('알림\n사이트가 곧 종료됩니다.');
  
  var sw = confirm("파일을 삭제하시겠습니까?");
  if(sw == true){
    alert('파일을 삭제합니다.');
  } else{
    
  }
  
</script>
 
</body>
