<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace = "dev.mvc.porder.Shopping_cartDAOInter">
  <!-- 장바구니 등록 -->
  <insert id="create" parameterType="Shopping_cartVO">
    INSERT INTO shopping_cart(shopping_cartno, memno, itemno, quantity)
    VALUES(shopping_cart_seq.nextval, #{memno}, 1, 1)
  </insert>
  
  <!-- 장바구니 목록 -->
  <select id="list" resultType="Shopping_cartVO">
    SELECT porderno, memno, rdate, total_price, status
    FROM porder
    ORDER BY porderno DESC
  </select>

  <!-- 장바구니 조회 -->
  <select id="read" resultType="Shopping_cartVO" parameterType="int">
    SELECT porderno, memno, rdate, total_price, status
    FROM porder
    WHERE porderno = #{porderno}
  </select>
  
  <!-- 장바구니 수정 -->
  <update id="update" parameterType="Shopping_cartVO">
    UPDATE porder
    SET total_price=#{total_price}, status=#{status}
    WHERE porderno = #{porderno}
  </update>
  
  <!-- 장바구니 삭제-->
  <delete id="delete" parameterType="int">
    DELETE FROM porder
    WHERE porderno = #{porderno}
  </delete>
  
</mapper> 