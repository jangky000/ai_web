<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace = "dev.mvc.porder.PorderDAOInter">
  <!-- 주문 등록 -->
  <insert id="create" parameterType="PorderVO">
    INSERT INTO porder(porderno, memberno, rdate, total_price, status)
    VALUES(porder_seq.nextval, #{memberno}, sysdate, #{total_price}, #{status})
  </insert>
  
  <!-- 주문 목록 -->
  <select id="list" resultType="PorderVO">
    SELECT porderno, memberno, rdate, total_price, status
    FROM porder
    ORDER BY porderno ASC
  </select>

  <!-- 주문 조회 -->
  <select id="read" resultType="PorderVO" parameterType="int">
    SELECT porderno, memberno, rdate, total_price, status
    FROM porder
    WHERE porderno = #{porderno}
  </select>  
  
  <!-- 주문 수정 -->
  <update id="update" parameterType="PorderVO">
    UPDATE porder
    SET memberno=1, total_price=1000, status='C'
    WHERE porderno = #{porderno}
  </update>
  
  <!-- 주문 삭제-->
  <delete id="delete" parameterType="int">
    DELETE FROM porder
    WHERE porderno = #{porderno}
  </delete>
  
</mapper> 